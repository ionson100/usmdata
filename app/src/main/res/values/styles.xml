<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="editBase">
        <item name="android:background">@drawable/edittext_shape</item>
        <item name="android:textColor">#083503</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="buttomSimple">
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">#f90d0808</item>
        <item name="android:shadowColor">#05803A</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
    </style>

    <style name="imageButton">
        <item name="android:background">@drawable/button_dark_blue_pizdaticus</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:padding">10sp</item>
    </style>
    <style name="image_menu">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerInside</item>
        <!--<item name="android:padding">35dp</item>-->
    </style>

</resources>
